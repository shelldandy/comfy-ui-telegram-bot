# ComfyUI Telegram Bot - Environment Configuration
# Copy to .env and fill in your values

# Where to save the Configuration
CONFIG_PATH=./data
# Required: Telegram bot token from @BotFather
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Comma-separated Telegram user IDs allowed to use the bot (optional if COMFY_BOT_TELEGRAM_ADMIN_USER is set)
ALLOWED_USERS=123456789,987654321

# Admin user ID - receives approval requests and can manage users (optional if ALLOWED_USERS is set)
TELEGRAM_ADMIN_USER=123456789

# ComfyUI connection (defaults work for ComfyUI on host machine)
COMFYUI_BASE_URL=http://host.docker.internal:8188
COMFYUI_WEBSOCKET_URL=ws://host.docker.internal:8188/ws

# Logging
LOG_LEVEL=info
LOG_JSON=true
